doctype html
html(ng-app="Archetype")
    head
        title Hello World!

        link(href="/vendor/foundation/css/foundation.min.css", rel="stylesheet", type="text/css")
    body
        nav.top-bar(data-topbar="data-topbar")
            ul.title-area
                li.name
                    h1
                        a(href="#") Archetype
            section.top-bar-section
                //- Left Nav Section
                ul.left
                    li
                        a(href="#") Left Nav Button
                //- Right Nav Section
                ul.right
                    li.active
                        a(href="#") Right Button Active
                    li.has-dropdown
                        a(href="#") Right Button with Dropdown
                        ul.dropdown
                            li
                                a(href="#") First link in dropdown
        div.row
            div.small-12.text-center.columns
                div(ng-controller="HelloWorld")
                    h2 Hello {{name}}
                    br
                    b Your name:
                    input(type="text", ng-model="name")

        //- Foundation and jquery for topbar
        script(src="/vendor/foundation/js/vendor/jquery.js", type="text/javascript")
        script(src="/vendor/foundation/js/foundation/foundation.js", type="text/javascript")
        script(src="/vendor/foundation/js/foundation/foundation.topbar.js", type="text/javascript")
        script(type="text/javascript").
            $(document).foundation();
        //- Angularjs
        script(src="/vendor/angular/angular.min.js", type="text/javascript")
        //- Our js
        script(src="/bundle.js", type="text/javascript")
